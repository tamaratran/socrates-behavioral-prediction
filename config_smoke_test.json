{
  "model_name": "Qwen/Qwen2.5-14B-Instruct",
  "data_dir": "data/smoke_test",
  "output_dir": "models/smoke_test_output",
  "training": {
    "num_epochs": 1,
    "max_steps": 2,
    "global_batch_size": 2,
    "per_device_train_batch_size": 1,
    "gradient_accumulation_steps": 2,
    "learning_rate": 1e-5,
    "warmup_ratio": 0.0,
    "lr_scheduler_type": "constant",
    "logging_steps": 1,
    "save_steps": 9999,
    "eval_steps": 9999,
    "save_total_limit": 0,
    "fp16": true
  },
  "lora": {
    "use_qlora": true,
    "r": 32,
    "lora_alpha": 64,
    "lora_dropout": 0.05,
    "target_modules": ["q_proj", "k_proj", "v_proj", "o_proj", "gate_proj", "up_proj", "down_proj"]
  }
}
